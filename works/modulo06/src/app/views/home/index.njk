{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/home.css">
{% endblock styles %}

{% block content %}

    <section class="shop container">
        <h2>Ãšltimos Produtos</h2>
        <div class="items">
            {% for product in products %}
                <div class="product">
                    <div class="image" 
                    style="background: url({{product.img if product.img else '//placehold.it/500x200'}})">
                    </div>

                    {% if product.oldPrice != product.price %}
                        <div class="old-price">{{product.oldPrice}}</div>
                    {% endif %}
                    <p>{{product.price}}</p>
                    <h4>{{product.name}}</h4>
                    <a href="/products/{{product.id}}" class="button">Ver Produto</a>
                </div>

            {% endfor %}
        </div>
    </section>


{% endblock content %}