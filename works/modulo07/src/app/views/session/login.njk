{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/products.css">
    <link rel="stylesheet" href="/styles/session.css">
{% endblock styles %}

{% block content %}

    <section class="login container form">
        <form method="POST" action="/users/login">

            <div class="header">
                <h3>Acessar</h3>
            </div>
            <div class="fields">
                {% include "session/parts/fields.njk" %}
            </div>
            
            <button class="button" type="submit">Entrar</button>

            <div class="footer">
                <ul>
                    <li>
                        <a href="/users/register">Registre-se</a>
                    </li>
                    <li>
                        <a href="/users/forgot-password">Esqueci a senha!</a>
                    </li>
                </ul>
            </div>
        </form>
    </section>

{% endblock content %}

{% block scripts %}
    <script src="/scripts/index.js"></script>
{% endblock scripts %}