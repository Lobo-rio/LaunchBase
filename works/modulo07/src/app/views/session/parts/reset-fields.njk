<div class="item">
    <div>E-mail</div>
    <div>
        <input 
            type="email" 
            name="email" 
            placeholder="Digite seu email.." 
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div>
        <input type="password" name="password" placeholder="Digite uma senha segura..">
    </div>
</div>

<div class="item">
    <div>Repitição de Senha</div>
    <div>
        <input type="password" name="passwordRepeat" placeholder="Digite novamente a senha..">
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">

