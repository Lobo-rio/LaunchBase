{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/instructors.css">
{% endblock styles %}

{% block content %}
    <div class="card table-container">
        <a href="/instructors/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                
                {% for instructor in instructors %}
                <tr>
                    <td>
                        <span style="background-image: url({{instructor.avatar_url}})"></span>
                        {{ instructor.name }}
                    </td>
                    <td>{{ instructor.services }}</td>
                    <td><a href="/instructors/{{ instructor.id }}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}